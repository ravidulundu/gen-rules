{
  "name": "minimal",
  "description": "Minimal TypeScript project with Bun",
  "folders": [
    "src",
    "src/lib"
  ],
  "dependencies": {
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "eslint": "^9.17.0",
    "prettier": "^3.0.0",
    "typescript-eslint": "latest",
    "@types/bun": "latest"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "files": {}
}
