{
  "name": "fullstack",
  "description": "Full-stack web application with Hono backend and React frontend",
  "folders": [
    "src/app",
    "src/client/components/atoms",
    "src/client/components/molecules",
    "src/client/components/organisms",
    "src/client/features",
    "src/client/hooks",
    "src/db",
    "src/lib",
    "src/shared",
    "public"
  ],
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/zod-validator": "latest",
    "drizzle-orm": "^0.39.0",
    "zod": "^3.23.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "^0.469.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "drizzle-kit": "^0.30.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "latest",
    "tailwindcss": "^3.4.0",
    "postcss": "latest",
    "autoprefixer": "latest",
    "eslint": "^9.17.0",
    "prettier": "^3.0.0",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-react-refresh": "latest",
    "typescript-eslint": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/bun": "latest"
  },
  "scripts": {
    "dev": "bun run dev:api & bun run dev:ui",
    "dev:api": "bun run --hot src/app/index.ts",
    "dev:ui": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "files": {
    "vite.config.ts": true,
    "drizzle.config.ts": true,
    "tailwind.config.ts": true,
    "postcss.config.cjs": true,
    "index.html": true
  }
}
